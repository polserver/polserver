class BaseClass endclass

class Animal( BaseClass )

  var staticVar := Print(1 + 2) ?: "value for static after printing";

  function Animal( byref this, name )
    this.name := name;
    print( $"Animal constructor staticVar={staticVar}" );
  endfunction

endclass

var myobj := struct{};
@Animal( myobj, "name" );
print( myobj );

