exported function move_realm()
  MoveObjectToLocation(char, 100,100,1,flags:=MOVEOBJECT_FORCELOCATION);
  while (1)
    var ev:=waitForClient(0, {EVT_OWNCREATE});
    if (!ev)
      return ev;
    endif
