use os;

program testloadexported()
  return 1;
endprogram

exported function loadexported_basic()
  var script:=LoadExportedScript("exported.ecl");
  if (script[2]!=1)
    return error{errortext:="Program did not load"};
  endif
  if (len(script[1].exported_functions)!=2)
    return error{errortext:="didnt found 2 functions"};
  endif
  var res:=script[1].call("func1");
  if (res !=2)
    return error{errortext:="func1 failed {}".format(res)};
  endif
  res:=script[1].call("func2");
  if (res !=3)
    return error{errortext:="func2 failed {}".format(res)};
  endif
  return 1;
endfunction

function copy_exported(script)
  var res:=script[1].call("func1");
  if (res !=2)
    return error{errortext:="func1 failed {}".format(res)};
  endif
  return res;
endfunction

exported function loadexported_copy()
  var script:=LoadExportedScript("exported.ecl");
  if (script[2]!=1)
    return error{errortext:="Program did not load"};
  endif
  var res:=copy_exported(script[1]);
  if (!res)
    return res;
  endif
  res:=script[1].call("func2");
  if (res !=3)
    return error{errortext:="func2 failed {}".format(res)};
  endif
  return 1; 
endfunction

exported function loadexported_critical()
  set_critical(1);
  var script:=LoadExportedScript("exported.ecl");
  if (script[2]!=1)
    set_critical(0);
    return error{errortext:="Program did not load"};
  endif
  if (len(script[1].exported_functions)!=2)
    set_critical(0);
    return error{errortext:="didnt found 2 functions"};
  endif
  var res:=script[1].call("func1");
  if (res !=2)
    set_critical(0);
    return error{errortext:="func1 failed {}".format(res)};
  endif
  res:=script[1].call("func2");
  if (res !=3)
    set_critical(0);
    return error{errortext:="func2 failed {}".format(res)};
  endif
  set_critical(0);
  return 1;
endfunction

exported function loadexported_args()
  var args:={"te","st"};
  var script:=LoadExportedScript("exportedargs.ecl",args);
  if (script[2]!="te_st_")
    return error{errortext:="Program did not accepted args: {}".format(script[2])};
  endif
  if (args[1]!="te" || args[2]!="st")
    return error{errortext:="program modified args {}".format(args)};
  endif
  var res:=script[1].call("func",args);
  if (res !="te_st_")
    return error{errortext:="func failed {}".format(res)};
  endif
  if (args[1]!="te" || args[2]!="st")
    return error{errortext:="func modified args {}".format(args)};
  endif
  res:=script[1].call("funcbyref",args);
  if (res !="te_st_")
    return error{errortext:="funcbyref failed {}".format(res)};
  endif
  if (args[1]!="te_" || args[2]!="st")
    return error{errortext:="funcbyref did not modified args {}".format(args)};
  endif
  return 1;
endfunction

exported function loadexported_critical_load()
  set_critical(1);
  var script:=LoadExportedScript("exported.ecl");
  if (script[2]!=1)
    set_critical(0);
    return error{errortext:="Program did not load"};
  endif
  set_critical(0);
  var res:=script[1].call("func1");
  if (res !=2)
    return error{errortext:="func1 failed {}".format(res)};
  endif
  return 1;
endfunction

exported function loadexported_critical_call()
  var script:=LoadExportedScript("exported.ecl");
  if (script[2]!=1)
    return error{errortext:="Program did not load"};
  endif
  set_critical(1);
  var res:=script[1].call("func1");
  if (res !=2)
    set_critical(0);
    return error{errortext:="func1 failed {}".format(res)};
  endif
  script:=0; // gc script
  set_critical(0);
  return 1;
endfunction
